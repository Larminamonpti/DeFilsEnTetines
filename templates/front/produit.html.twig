{% extends 'layout.html.twig' %}

{% block title %}Products{% endblock %}

{% block main %}
    <h1>Products</h1>

    <table class="table">
        <tbody>

        <tr>
            <th>Titre</th>
            <td>{{ product.title }}</td>
        </tr>
        <tr>
            <th>Déscription</th>
            <td>{{ product.description }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ product.price }}€</td>
        </tr>
        <tr>
            <th>Images</th>
            <td>
                {% for image in product.images %}
                    <img class="img-fluid" src="{{ asset('images/products/'~ image) }}" alt="">
                {% endfor %}
            </td>
        </tr>

        </tbody>
    </table>

    <a href="{{ path('products_index') }}">back to list</a>

    <a href="{{ path('products_edit', {'id': product.id}) }}">edit</a>

    {{ include('admin/products/_delete_form.html.twig') }}
{% endblock %}
