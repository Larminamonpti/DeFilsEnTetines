{% extends 'layout.html.twig' %}

{% block title %}Gérer mon compte{% endblock %}
{% block javascripts %}
<script src="{{asset('js/compte.js')}}"></script>
<script src="{{asset('js/embed.js')}}"></script>
{% endblock %}

{% block main %}

{{ dump(commandes) }}


    <div class="formulaire" id="compte">
        <div class="d-flex justify-content-center">
            <p class="myborder col-4 mx-2 p-3 text-center" id="info">Mon compte</p>
            <p class="myborder col-4 mx-2 p-3 text-center" id="adresse">Mes adresse</p>
            <p class="myborder col-4 mx-2 p-3 text-center" id="commande">Mes commande</p>
        </div>

        <div class="d-block" id="infos">
            <h2>Infos utilisateur</h2>
            {{ include('user/_form.html.twig', {'button_label': 'Modifier'}) }}
        </div>
        
        <div class="d-none" id="adresses">
            <h2>Gérer mes adresses</h2>
            <div class="d-flex flex-wrap justify-content-around">

                {% for adress in adresses %}
                
                <div class="d-flex">
                    <a href="{{ path('adress_edit', {'id': adress.id}) }}" class="adress m-2">
                        <div class="card">
                            <div class="card-header text-center">
                                {{adress.name|capitalize}}
                            </div>
                            <div class="card-body">
                                <p class="card-text">{{adress.street|u.truncate(30, '...', false)}}</p>
                                <p class="card-text">{{adress.postal}} {{adress.city|capitalize|u.truncate(30, '...', false)}}</span></p>
                                <p class="card-text">{{adress.country|capitalize}}</p>
                            </div>
                            <div class="card-footer">
                                
                                    {{ include('adress/_delete_form.html.twig') }}

                                    
                            </div>
                        </div>
                    </a>
                    
                </div>
                
                {% endfor %}
            </div>
            <div class="d-flex justify-content-center">
                <a class="btn btn-bleu my-3" href="{{ path('adress_new') }}">Ajouter une adresse</a>
            </div>
        </div>
        <div class="d-none" id="commandes">
            
                {% for commande in commandes %}
                <div class="border p-3 my-3">
                    <div>
                        <h4 class="text-center">Commande du {{commande.createdAt|date('d/m/Y')}}</h4>
                        {% if commande.send == true %}
                            <div class="float-end check"><i title="Commande envoyer" class="fas fa-check text-success"></i></div>
                        {% endif %}
                    </div>
                    {% for product, quantity in commande.produits %}
                    <div class="w-75 m-auto">
                    <ul class="d-flex justify-content-between list-unstyled">
                        <li>{{product}} : </li>
                        <li>x {{quantity}}</li>
                    </ul>
                    </div>    
                    {% endfor %}
                    <hr>
                    <div class="w-75 m-auto">
                        <div class="d-flex justify-content-between">
                            <p>Total : </p>
                            <p>{{commande.total}} €</p>
                        </div>
                    </div>
                    <hr>
                    <div class="w-75 m-auto">
                        <div class="d-flex justify-content-between">
                            <p>Adresse de livraison:</p>
                            <p>{{commande.adress.name}}</p> 
                        </div>
                    </div>
                </div>
                {% endfor %}
                
        </div>
    </div>
    
{% endblock %}
