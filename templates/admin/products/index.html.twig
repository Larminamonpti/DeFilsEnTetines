{% extends 'layout.html.twig' %}

{% block title %}Products index{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css">
{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.22/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#list-products').DataTable();
        } );
    </script>
{% endblock %}

{% block main %}
    <h1 class="my-2">Liste des Classeurs</h1>
    <a class="btn bg-bleu text-rose border-bleu my-2" href="{{ path('products_new') }}">Ajouter un produit</a>
    <div class="container-fluid">
        <table id="list-products" class="table table-striped table-bordered ">
            <thead>
            <tr>

                <th>Titre</th>
                <th>DÃ©scription</th>
                <th>Prix</th>
                <th>type</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>

                    <td>{{product.title}}</td>
                    <td>{{product.description}}</td>
                    <td>{{product.price}}</td>
                    <td>{{product.type.name}}</td>
                    <td id="td-img"><img src="{{ asset('images/products/'~product.imageName) }}" alt="{{ product.title }}"></td>
                    <td>
                        <div class="d-flex">
                            <a class="btn text-rose bg-bleu border-bleu mx-2 " href="{{ path('products_edit', {'id': product.id}) }}">Modifier</a>
                            {{ include('products/_delete_form.html.twig') }}
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
