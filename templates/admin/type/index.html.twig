{% extends 'admin.layout.html.twig' %}

{% block title %}Type index{% endblock %}

{% block main %}
    <div class="formulaire">
        <h1>Type index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Slug</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for type in types %}
                <tr>
                    <td>{{ type.name }}</td>
                    <td>{{ type.slug }}</td>
                    <td>
                        <a href="{{ path('type_edit', {'id': type.id}) }}">edit</a>
                        {{ include('admin/type/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('type_new') }}">Create new</a>
    </div>
{% endblock %}
