<header>

    <div class="d-flex justify-content-between bg-bleu" id="header-top">
        <div class="col-1 align-self-center"><a href="{{ path('front_index') }}"><img class="img-fluid" src="{{ asset('images/logo.png') }}" alt="logo de fils en tétines"></a></div>
        <div class="col-6 d-flex justify-content-center text-white h1 align-self-center px-0">DeFilsEnTétines</div>
        <div class="col-1 align-self-center">
            <a class="nav-link dropdown-toggle align-self-center" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false"><img
                        class="img-fluid " src="{{ asset('images/compte.png') }}" alt="logo connexion"></a>
            <ul class="dropdown-menu">

                {% if not app.user %}
                    <li><a class="dropdown-item" href="{{ path('user_new') }}">Inscription</a></li>
                    <li><a class="dropdown-item" href="{{ path("app_login")}}">Connexion</a></li>
                {% else %}
                    <li><a class="dropdown-item" href="{{ path('user_edit', {"id": app.user.id  }) }}">Gérer mon compte</a></li>
                    <li><a class="dropdown-item" href="{{ path("app_logout")}}">Déconnexion</a></li>
                {% endif %}
            </ul>
        </div>
    </div>

    <nav class=" navbar navbar-expand-lg navbar-light d-flex bg-rose">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 d-flex justify-content-around w-100">
                    {% for categorie, types in categories%}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">{{ categorie | upper }}</a>
                        <ul class="dropdown-menu">
                            {% for type in types %}
                            <li><a class="dropdown-item" href="{{ path('front_produits', {"slug": type.slug}) }}">{{ type.name }}</a></li>
                            {% endfor %}

                        </ul>
                    </li>
                    {% endfor %}

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('front_produits', {"slug": "paniers-naissance"}) }}">PANIERS NAISSANCE</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('products_index') }}">ADMIN</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>


</header>