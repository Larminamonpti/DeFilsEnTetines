{% extends 'base.html.twig' %}

{% block title %}Adress index{% endblock %}

{% block body %}
    <div class="formulaire">

        <h1>Adress index</h1>
        
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Street</th>
                    <th>Postal</th>
                    <th>City</th>
                    <th>Country</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for adress in adresses %}
                <tr>
                    <td>{{ adress.id }}</td>
                    <td>{{ adress.street }}</td>
                    <td>{{ adress.postal }}</td>
                    <td>{{ adress.city }}</td>
                    <td>{{ adress.country }}</td>
                    <td>
                        <a href="{{ path('adress_show', {'id': adress.id}) }}">show</a>
                        <a href="{{ path('adress_edit', {'id': adress.id}) }}">edit</a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        
        <a href="{{ path('adress_new') }}">Create new</a>
    </div>
    {% endblock %}
    